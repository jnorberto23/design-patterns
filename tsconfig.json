{
  "include": [
    "./src/**/*.ts",
    "./src/**/**/*.ts",
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
}